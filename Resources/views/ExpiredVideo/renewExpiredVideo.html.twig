{% extends 'PumukitWebTVBundle::layout.html.twig' %}

{% block body %}

    <div class="col-md-6 col-md-offset-3 text-center" style="margin-top:30px">
        {% if message == 0 %}
            <h4>{% trans %}The multimedia object has been successfully renewed.{% endtrans %}</h4>
        {% elseif message == 1 %}
            <h4>{% trans %}You aren't the owner of this multimedia object.{% endtrans %}</h4>
        {% elseif message == 2 %}
            <h4>
               {% trans %}Has been renewed.{% endtrans %}
            </h4>
            <ul>
                {% for multimediaObject in multimediaObjects %}
                    <li> {{ multimediaObject.title }} </li>
                {% endfor %}
            </ul>
        {% elseif message == 3 %}
            <h4>{% trans %}Multimedia object doesn't exists.{% endtrans %}</h4>
        {% elseif message == 4 %}
            <h4>{% trans %}You aren't the owner of this multimedia object.{% endtrans %}</h4>
        {% endif %}
    </div>
    <div class="col-md-4 col-md-offset-4" style="margin-top:40px">
        <a href="{{ path('homepage') }}" class="btn btn-block btn-default">{% trans %}Return{% endtrans %}</a>
    </div>
{% endblock %}